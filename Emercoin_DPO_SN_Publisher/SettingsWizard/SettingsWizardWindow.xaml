<Window x:Class="EmercoinDPOSNP.SettingsWizard.SettingsWizardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="350" Width="440.391" Closing="Window_Closing" ResizeMode="NoResize">
    <Grid>
        <Frame Name="frame1" Margin="0,0,0,85" NavigationUIVisibility="Hidden"></Frame>
        <Button Name="nextBtn" Content="Next" HorizontalAlignment="Right" Margin="0,0,90,33" VerticalAlignment="Bottom" Width="76" Click="nextBtn_Click"/>
        <Button Name="cancelBtn" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,33" VerticalAlignment="Bottom" Width="75" Click="cancelBtn_Click" IsCancel="True"/>
        <StatusBar VerticalAlignment="Bottom" Height="28" BorderThickness="0,1,0,0" BorderBrush="Gray" Margin="0">
            <StatusBarItem HorizontalContentAlignment="Stretch">
                <ProgressBar x:Name="OperationProgress" VerticalAlignment="Center" Height="20"/>
            </StatusBarItem>
        </StatusBar>
        <TextBlock x:Name="StatusTextBlock" TextWrapping="Wrap" Text="..." Margin="10,0,10,64" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
